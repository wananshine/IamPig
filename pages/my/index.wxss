/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.scroll_box{
width: 100%;
overflow: hidden;
padding: 20rpx 10rpx;
background: #fff;
white-space: nowrap;
background-color: #f5f5f5;
}
.scroll_title{
  font-size: 32rpx;
  display: block;
  margin-bottom: 20rpx;
}
.scroll-view-item{
  position: relative;
  display: inline-block;
  width: 84rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 6rpx;
  margin-right: 24rpx;
  background-color: #fff;
}
.bc_blue::before,
.bc_red::before{
  content: "";
  position: absolute; top: 0rpx; right: 0rpx;
  display: block;
  width: 12rpx;
  height: 12rpx;
  background-color: skyblue;
  border-top-right-radius: 6rpx;
}
